#version 100

precision mediump float;
uniform sampler2D m_samp0;
varying vec4 m_cord0;

void main ()
{
  vec4 rgb;

  rgb = texture2D(m_samp0, m_cord0.xy);

#if defined(KODI_LIMITED_RANGE)
  rgb.rgb *= (235.0 - 16.0) / 255.0;
  rgb.rgb += 16.0 / 255.0;
#endif

  gl_FragColor = vec4(rgb.rgb, 1.0);
}
